@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-primary text-white text-center p-4">
                    <h3 class="fw-bold mb-0" style="letter-spacing: -1px;">
                        WE<span style="color: #a0f0ff">B</span>ODY
                    </h3>
                    <p class="mb-0 opacity-75">Tekrar Hoşgeldin!</p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">E-Posta</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-primary text-decoration-none fw-medium">Şifremi Unuttum?</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow hover-up">
                            GİRİŞ YAP
                        </button>
                    </form>

                    <div class="mt-4">
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                // Eğer dış servis yoksa boş geçer veya geliştirici için not düşer
                            }
                            else
                            {
                                // Google/Facebook varsa "VEYA" çizgisi ve butonlar çıkar
                                <div class="position-relative text-center my-4">
                                    <hr class="text-secondary opacity-25">
                                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">VEYA</span>
                                </div>

                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-dark rounded-pill py-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName ile Giriş
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>

                    <div class="text-center mt-4 pt-3 border-top">
                        <p class="small text-muted mb-2">
                            Henüz üye değil misin?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Hesap Oluştur</a>
                        </p>

                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-underline">Doğrulama mailini tekrar gönder</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-up:hover {
        transform: translateY(-3px);
        transition: 0.3s;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}