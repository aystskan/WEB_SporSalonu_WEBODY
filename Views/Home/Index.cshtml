@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="rounded-5 overflow-hidden position-relative text-center text-white mb-5 shadow-lg mx-3 mx-lg-0"
     style="background: linear-gradient(135deg, rgba(13, 110, 253, 0.9) 0%, rgba(13, 202, 240, 0.8) 100%), url('https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?q=80&w=1470&auto=format&fit=crop'); background-size: cover; background-position: center; padding: 160px 20px; min-height: 600px; display: flex; align-items: center; justify-content: center;">

    <div class="position-relative z-2 container">
        <span class="badge bg-white text-primary px-4 py-2 rounded-pill mb-4 fw-bold shadow-sm" style="font-size: 1rem;">
            <i class="bi bi-stars"></i> YAPAY ZEKA DESTEKLİ KOÇLUK
        </span>

        <h1 class="display-2 fw-bold mb-4" style="text-shadow: 0 2px 10px rgba(0,0,0,0.2);">
            Geleceğin Antrenman<br>Deneyimi.
        </h1>

        <p class="lead mb-5 text-white opacity-90 mx-auto fs-4" style="max-width: 800px; font-weight: 300;">
            Webody, senin için verileri analiz eder, en uygun programı çıkarır ve gelişimini takip eder.
            Daha akıllı çalış, daha hızlı sonuç al.
        </p>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="YapayZeka" asp-action="Index" class="btn btn-light btn-lg text-primary fw-bold px-5 py-3 rounded-pill shadow hover-up" style="font-size: 1.2rem;">
                AI KOÇ'U DENE
            </a>
            <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg fw-bold px-5 py-3 rounded-pill hover-up" style="font-size: 1.2rem;">
                ÜYE OL
            </a>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-4 text-center">
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm p-5 hover-card bg-white rounded-5">
                <div class="icon-box mb-4 mx-auto bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-cpu" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold text-dark mb-3">Akıllı Analiz</h3>
                <p class="text-muted fs-5">
                    Vücut kitle indeksini ve hedeflerini analiz ederek sana özel bilimsel bir yol haritası çizeriz.
                </p>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm p-5 hover-card bg-white rounded-5">
                <div class="icon-box mb-4 mx-auto bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold text-dark mb-3">Veri Odaklı</h3>
                <p class="text-muted fs-5">
                    Gelişimini şansa bırakma. Tüm antrenman verilerin veritabanımızda güvenle saklanır ve raporlanır.
                </p>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm p-5 hover-card bg-white rounded-5">
                <div class="icon-box mb-4 mx-auto bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-calendar-check" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold text-dark mb-3">Randevu Sistemi</h3>
                <p class="text-muted fs-5">
                    Uzman antrenörlerimizden dilediğin zaman randevu al, birebir görüşmelerle hedefine ulaş.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-up:hover {
        transform: translateY(-5px);
        transition: 0.3s;
    }

    .hover-card {
        transition: all 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(13, 110, 253, 0.1) !important;
        }
</style>