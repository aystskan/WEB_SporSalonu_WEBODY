@model IEnumerable<WEBODY.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <h2>Randevularım</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz bir randevunuz bulunmamaktadır. <a asp-action="Index">Hemen Randevu Al!</a></div>
    }
    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success">@TempData["Mesaj"]</div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">@TempData["Hata"]</div>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Tarih ve Saat</th>
                    <th>Hizmet</th>
                    <th>Antrenör</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                    <th>Ücret</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.HizmetAdi</td>
                        <td>@(item.Antrenor?.AdSoyad ?? "Belirtilmemiş")</td>
                        <td>
                            @if (item.Durum == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else if (item.Durum == "İptal Edildi")
                            {
                                <span class="badge bg-danger">İptal Edildi</span>
                            }
                            else if (item.Durum == "Tamamlandı")
                            {
                                <span class="badge bg-secondary">Tamamlandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@item.Durum</span>
                            }
                        </td>
                        <td>
                            @* Sadece Gelecek Tarihli ve İptal Edilmemiş Randevular İçin Buton Göster *@
                            @if (item.TarihSaat > DateTime.Now && item.Durum != "İptal Edildi" && item.Durum != "Tamamlandı")
                            {
                                <form asp-action="IptalEt" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.RandevuId" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Randevuyu iptal etmek istediğinize emin misiniz?');">
                                        İptal Et
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted text-small">İşlem Yok</span>
                            }
                        </td>
                        <td>@item.Ucret.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-primary">Yeni Randevu Al</a>
    }
</div>

