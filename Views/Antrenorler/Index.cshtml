@model IEnumerable<WEBODY.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenörler</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UzmanlikAlani)
            </th>
            <th>Çalışma Saatleri</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UzmanlikAlani)
            </td>
            <td>
                @item.BaslangicSaati:00 - @item.BitisSaati:00
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AntrenorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AntrenorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AntrenorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
