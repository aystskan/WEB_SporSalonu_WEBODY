@model WEBODY.Models.Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<h1>Randevu Yönetimi</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RandevuId" />

            <div class="form-group mb-3">
                <label asp-for="UyeAdSoyad" class="control-label fw-bold">Üye Adı Soyadı</label>
                <input asp-for="UyeAdSoyad" class="form-control bg-light" readonly="readonly" />
                <span asp-validation-for="UyeAdSoyad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TarihSaat" class="control-label fw-bold"></label>
                <input asp-for="TarihSaat" class="form-control" />
                <span asp-validation-for="TarihSaat" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AntrenorId" class="control-label fw-bold"></label>
                <select asp-for="AntrenorId" class="form-control" asp-items="ViewBag.AntrenorId"></select>
                <span asp-validation-for="AntrenorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Durum" class="control-label fw-bold">Randevu Durumu</label>

                <select asp-for="Durum" class="form-control form-select">
                    <option value="Beklemede">Beklemede</option>
                    <option value="Onaylandı">Onaylandı</option>
                    <option value="Tamamlandı">Tamamlandı</option>
                    <option value="İptal Edildi">İptal Edildi</option>
                </select>
                <span asp-validation-for="Durum" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet ve Güncelle" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}