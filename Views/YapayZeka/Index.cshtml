@model WEBODY.Models.YapayZekaViewModel

@{
    ViewData["Title"] = "Akıllı Antrenör";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-robot"></i> AI Destekli Program</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Yaşınız</label>
                            <input asp-for="Yas" class="form-control" type="number" value="25" required />
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label fw-bold">Boy (cm)</label>
                                <input asp-for="Boy" class="form-control" type="number" value="175" required />
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label fw-bold">Kilo (kg)</label>
                                <input asp-for="Kilo" class="form-control" type="number" value="70" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Cinsiyet</label>
                            <select asp-for="Cinsiyet" class="form-select">
                                <option value="Kadın">Kadın</option>
                                <option value="Erkek">Erkek</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Hedefiniz</label>
                            <select asp-for="Hedef" class="form-select">
                                <option value="Kilo Vermek (Yağ Yakımı)">Kilo Vermek</option>
                                <option value="Kas Kütlesi Kazanmak">Kas Yapmak</option>
                                <option value="Formu Korumak">Formu Korumak</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Aktivite Düzeyi</label>
                            <select asp-for="AktiviteDuzeyi" class="form-select">
                                <option value="Hareketsiz (Masa başı)">Hareketsiz</option>
                                <option value="Orta Hareketli (Haftada 2-3 spor)">Orta Hareketli</option>
                                <option value="Çok Hareketli (Haftada 5+ spor)">Çok Hareketli</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-dark w-100 py-2">
                            <i class="bi bi-cpu"></i> Programımı Oluştur
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger shadow-sm">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Hata
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.YapayZekaCevabi))
            {
                <div class="card shadow border-success">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-check-circle-fill"></i> Size Özel Tavsiyeler</h4>
                    </div>
                    <div class="card-body">
                        @Html.Raw(Model.YapayZekaCevabi)
                    </div>
                    <div class="card-footer text-muted text-center">
                        <small>Bu program Yapay Zeka (Gemini AI) tarafından oluşturulmuştur. Lütfen uygulamadan önce doktorunuza danışınız.</small>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center mt-5 text-muted">
                    <i class="bi bi-magic" style="font-size: 4rem; opacity: 0.5;"></i>
                    <p class="mt-3 fs-5">Sol taraftaki bilgileri doldurun ve<br>yapay zekanın size özel program oluşturmasını bekleyin.</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        var btn = this.querySelector('button[type="submit"]');
        var originalText = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Oluşturuluyor...';

        // Form submit işleminin devam etmesi için (Normalde disabled buton formu göndermez)
        // Bu küçük bir hile ile formu manuel gönderiyoruz:
        // Ancak ASP.NET Core MVC'de buton disabled olunca bazen post etmeyebilir.
        // En temizi butonu disabled yapıp submit olayına izin vermektir.
    });
</script>
